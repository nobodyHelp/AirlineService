@model AirlineService.Data.Entities.ReportViewModel

@{
    ViewData["Title"] = "Report";
}

<form method="get">
    <div class="form-inline">
        <label for="arrival">Departure date:</label>
        <input type="date" id="start" name="tripStart" />
        
        <label for="arrival">Arrival date:</label>
        <input type="date" id="end" name="tripEnd" />

        <input type="submit" value="Filter" class="btn btn-primary" />
    </div>


</form>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Report</h2>
        </div>
    </div>
</div>
<div>
    <hr />
    <dl class="row">        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tickets)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Date Of Service</th>
                    <th>Date of Arrival</th>
                    <th>Order Number</th>
                    <th>Departure Point</th>
                    <th>Destination Point</th>
                    <th>Service Rendered</th>

                </tr>
                @foreach (var item in Model.Tickets)
                {                                           
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfService)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfArrival)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeparturePoint)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DestinationPoint)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.ServiceRendered)
                        </td>
                    </tr>                                                            
                }                
            </table>
        </dd>
    </dl>
</div>
<div>    
    <a asp-controller="Passenger" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
</div>
