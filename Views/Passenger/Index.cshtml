@model IEnumerable<Passenger>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Passenger list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Passenger" asp-action="Create" class="btn btn-primary">
                Create new passenger
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Middle Name
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="2%">
                    @obj.Id
                </td>
                <td width="10%">
                    @obj.LastName
                </td>
                <td width="10%">
                    @obj.FirstName
                </td>
                <td width="15%">
                    @obj.MiddleName
                </td>                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Passenger" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> Edit</a>
                        <a asp-controller="Passenger" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> Delete</a>
                        <a asp-controller="Passenger" asp-action="GetDocument" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> Docs</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
