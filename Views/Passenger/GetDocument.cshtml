@model AirlineService.Data.Entities.Passenger

@{
    ViewData["Title"] = "Document";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Documents</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Document" asp-action="Create" class="btn btn-primary">
                Add document
            </a>
        </div>
    </div>
</div>
<div>
    <hr />
    <dl class="row">        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Documents)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Type</th>
                    <th>Number</th>
                </tr>
                @foreach (var item in Model.Documents)
                {                                           
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Document" asp-action="Edit" asp-route-id="@item.Id"
                                class="btn btn-primary mx-2"> Edit</a>
                                <a asp-controller="Document" asp-action="Delete" asp-route-id="@item.Id"
                                class="btn btn-primary mx-2"> Delete</a>
                           </div>
                        </td>
                    </tr>                                                            
                }                
            </table>
        </dd>
    </dl>
</div>
<div>    
    <a asp-controller="Passenger" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
</div>
