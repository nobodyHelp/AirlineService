@model Ticket

<form method="post" asp-action="Delete">
    <input asp-for="Id" type="hidden" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete ticket</h2>
            <hr />
        </div>
        <div class="mb-3">
            <div class="mb-3">
            <label asp-for="PassengerId"></label>
            <input asp-for="PassengerId" class="form-control" />
        </div>
            <label asp-for="DeparturePoint"></label>
            <input asp-for="DeparturePoint" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DestinationPoint"></label>
            <input asp-for="DestinationPoint" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="OrderNumber"></label>
            <input asp-for="OrderNumber" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ServiceProvider"></label>
            <input asp-for="ServiceProvider" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DateOfDeparture"></label>
            <input asp-for="DateOfDeparture" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DateOfArrival"></label>
            <input asp-for="DateOfArrival" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DateOfService"></label>
            <input asp-for="DateOfService" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>