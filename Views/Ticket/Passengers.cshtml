@model AirlineService.Data.Entities.Ticket

@{
    ViewData["Title"] = "Details";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Passengers</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Passenger" asp-action="Create" class="btn btn-primary">
                Add passenger
            </a>
        </div>
    </div>
</div>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Passengers)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>LastName</th>
                    <th>FirstName</th>
                    <th>MiddleName</th>
                </tr>
                @foreach (var item in Model.Passengers)
                {                                           
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MiddleName)
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Passenger" asp-action="Edit" asp-route-id="@item.Id"
                                class="btn btn-primary mx-2"> Edit</a>
                                <a asp-controller="Passenger" asp-action="Delete" asp-route-id="@item.Id"
                                class="btn btn-danger mx-2"> Delete</a>
                           </div>
                        </td>
                    </tr>                                                            
                }
                
            </table>
        </dd>
    </dl>
</div>
<div>    
    <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
</div>
