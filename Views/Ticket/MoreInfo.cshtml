@model AirlineService.Data.Entities.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeparturePoint)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeparturePoint)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DestinationPoint)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DestinationPoint)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceProvider)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceProvider)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfDeparture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfDeparture)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfArrival)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfArrival)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfService)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfService)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Passenger)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>LastName</th>
                    <th>FirstName</th>
                    <th>MiddleName</th>
                    <th>Document Type</th>
                    <th>Document Number</th>

                </tr>
                
                @foreach (var item in Model.Passenger.Documents)
                {                       
                   <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Passenger.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Passenger.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Passenger.MiddleName)
                        </td>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                    </tr>  
                                     
                }
                
            </table>
        </dd>
    </dl>
</div>
<div>    
    <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
</div>
